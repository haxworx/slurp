 <div {{ stimulus_controller('robot-delete', {
       token: csrf_token('robot-delete')
  }) }}>
    <div class="modal" tabindex="-1" data-robot-delete-target="modal" data-dashboard-target="modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Are you sure?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete the selected robot?</p>
            <p>To confirm please enter "delete me".</p>
            <input type="text" class="confirm" data-robot-delete-target="confirm">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" {{ stimulus_action('robot-delete', 'remove') }}><div data-robot-delete-target="button" class="btn btn-danger disabled">Delete</div></a>
          </div>
        </div>
      </div>
    </div>
</div>
