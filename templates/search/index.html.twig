{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
<form action="/search" method="GET">
<div {{ stimulus_controller('search') }}>
<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search" value="{{ search_term }}" name="search">
    <div class="input-group-append">
        <button type="submit" class="btn btn-primary">Search
            <i class="fas fa-search"></i>
        </button>
    </div>
</div>
</form>
</div>

{% if search_term %}
<p class="py-4">Found a total of {{ count }} results.</p>
{% endif %}
{% if count %}
<div {{ stimulus_controller('records_view') }}>
<div class="container py-4">
<table width="100%" class="table table-striped">
    <thead>
        <tr class="align-middle"><th>bot id</th><th>id</th><th>path</th><th>timestamp</th><th>content type</th><th>content length</th><th>headers</th><th></th><th></th></tr>
    </thead>
    <tbody>
{% for record in records %}
        <tr class="align-middle">
            <td>{{ record.botId}}</td>
            <td>{{ record.id }}</td>
            <td>{{ record.path }}</td>
            <td>{{ record.timeStamp|date('Y-m-d H:i:s') }}</td>
            <td>{{ record.contentType }}</td>
            <td>{{ record.length }}</td>
            <td>{{ record.headers|ellipsis }}</td>
            <td>
                <button class="btn btn-primary btn-sm" data-records-view-bot-id-param="{{ record.botId }}" data-records-view-id-param="{{ record.id }}" data-action="records-view#show">View</button>
            </td>
            <td>
                <button class="btn btn-secondary btn-sm" data-records-view-bot-id-param="{{ record.botId }}" data-records-view-id-param="{{ record.id }}" data-action="records-view#download">Download</button>
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>

<ul class="pagination">
{% if prev >= 0 %}
    <li class="page-item"><a class="page-link" href="{{ path('app_search', { search: search_term, offset: prev }) }}">Previous</a></li>
{% endif %}
{% if next < records|length %}
    <li class="page-item"><a class="page-link" href="{{ path('app_search', { search: search_term, offset: next }) }}">Next</a></li>
{% endif %}
</ul>
</div>
<pre data-records-view-target="pre" class="record-view">
</pre>
</div>
{% endif %}

{% endblock %}
